<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtPagamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Folha de Pagamento"
        android:textColor="#36D339"
        android:textSize="30sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/edtNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPagamento"
        android:layout_marginTop="25dp"
        android:hint="Nome"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtSalarioBruto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtNome"
        android:layout_marginTop="20dp"
        android:hint="Salário bruto"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtSexo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtSalarioBruto"
        android:layout_marginTop="11dp"
        android:paddingLeft="170dp"
        android:text="Sexo"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/rgroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSexo"
        android:layout_marginTop="-2dp">

        <RadioButton
            android:id="@+id/rbtMasculino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Masculino"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rbtFeminino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rbtMasculino"
            android:layout_marginTop="15dp"
            android:text="Feminino"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RadioGroup>

    <EditText
        android:id="@+id/edtNumFilhos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rgroup"
        android:layout_marginTop="15dp"
        android:hint="Número de filhos"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="170dp"
        android:layout_height="65dp"
        android:layout_below="@id/edtNumFilhos"
        android:layout_marginStart="120dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="120dp"
        android:backgroundTint="#7AE885"
        android:text="Calcular"
        android:textColor="@color/black" />



</RelativeLayout>